{
  "name": "kafka-desktop-viewer",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "dist": "npm run build && electron-builder --config electron-builder.json"
  },
  "dependencies": {
    "kafkajs": "^2.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "wait-on": "^8.0.0"
  },
  "description": "A local Kafka desktop viewer for tailing topics with a safe UI.",
  "author": "Ali Adem",
  "license": "Apache-2.0"
}
